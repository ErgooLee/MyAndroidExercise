<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="380dp"
    android:layout_height="50dp"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/closeBtn"
        android:layout_width="27dp"
        android:layout_height="27dp"
        android:src="@drawable/close" />

    <LinearLayout
        android:id="@+id/mainPart"
        android:layout_width="294dp"
        android:layout_height="match_parent"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:background="@drawable/blue_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/appIconImg"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:contentDescription="@null"
            android:scaleType="centerCrop"
            android:src="@drawable/f0" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:layout_marginLeft="18dp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="center"
            android:singleLine="true"
            android:text="尚未安装"
            android:textColor="#ffffff"
            android:textSize="20.3sp" />

        <View
            android:id="@+id/divider"
            android:layout_width="1dp"
            android:layout_height="33.5sp"
            android:layout_marginLeft="18.5dp"
            android:layout_marginRight="18.5dp"
            android:background="#ffffff" />

        <TextView
            android:id="@+id/show"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="14dp"
            android:layout_marginRight="14dp"
            android:gravity="center"
            android:text="查看"
            android:textColor="#ffffff"
            android:textSize="20.3sp" />

        <ImageButton
            android:id="@+id/right_triangle"
            android:layout_width="4dp"
            android:layout_height="7dp"
            android:layout_marginEnd="23dp"
            android:layout_marginRight="23dp"
            android:background="@drawable/white_right_triangle_icon"
            android:contentDescription="@null" />
    </LinearLayout>

    <!--    为了实现居中加一个空view-->

    <View
        android:layout_width="42dp"
        android:layout_height="42dp" />

</LinearLayout>