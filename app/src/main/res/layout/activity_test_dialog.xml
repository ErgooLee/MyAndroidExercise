<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".dialog.TestDialog">


    <Button
        android:id="@+id/showFloat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="show float" />

    <Button
        android:id="@+id/showAlertDialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="show toast" />

    <Button
        android:id="@+id/showDialogCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="show alert" />

    <Button
        android:id="@+id/showDialogTheme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="show alert" />

    <Button
        android:id="@+id/showDialogFull"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="show full" />


</LinearLayout>